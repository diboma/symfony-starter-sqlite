{% extends 'layouts/base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}

<div class="d-flex justify-content-center mb-4 gap-3">
  <twig:Button  href="{{ path('app_products_index') }}"
                variant="btn-primary"
                label="back"
                icon='lucide:circle-arrow-left'/>

  <twig:Button  href="{{ path('app_products_edit', {id: product.id}) }}"
                variant="btn-warning"
                label="Edit product"
                icon='lucide:edit'/>

  <twig:Button  href="{{ path('app_products_delete', {id: product.id}) }}"
                variant="btn-danger"
                label="Delete product"
                icon='lucide:trash-2'/>
</div>

<h1 class="text-center mb-2">{{ product.name }}</h1>

<div class="text-center text-secondary d-flex flex-column gap-1 my-2">
  {% if product.owner %}
    <span>
      {{ 'owner'|trans|capitalize }}:
      {{ product.owner.firstName }} {{ product.owner.lastName }}
    </span>
  {% endif %}

  <span>
    {{ 'category'|trans|capitalize }}:
    {{ product.category.name }} {{ product.category.name }}
  </span>
</div>

<div class="text-center">
  <p class="text-center text-primary fw-bold fs-3">â‚¬ {{ product.price }}</p>

  <img src="{{ product.image }}"
       class="img-fluid"
       alt="{{ product.name }}"
       style="max-width: 320px; object-fit: contain">

  <p class="my-3 mx-auto" style="max-width: 70ch">{{ product.description }}</p>
</div>

{% endblock %}
