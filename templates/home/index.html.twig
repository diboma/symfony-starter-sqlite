    <h2 class="mt-4">Test Tom Selext</h2>

    <form data-role="form-tom-select-product">
        <select data-controller="tom-select-product" multiple>
            {% for product in allProducts %}
                <option value="{{ product.id }}"
                        data-option-id="{{ product.id }}"
                        data-product-name="{{ product.name }}"
                        data-category-id="{{ product.category.id }}"
                >
                    {{ product.name }}
                </option>
            {% endfor %}
        </select>
        <button type="submit" class="btn btn-dark">Send</button>
    </form>

</div>
