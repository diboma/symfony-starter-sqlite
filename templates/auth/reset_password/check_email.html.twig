{% extends 'layouts/base.html.twig' %}

{% block title %}{{ 'Link sent'|trans|capitalize }}{% endblock %}

{% block body %}

  <div class="card shadow p-3 mx-auto" style="max-width: 320px">
    <p>
        {{ 'We have sent you an email that contains a link you can use to reset your password.'|trans }}
    </p>
    <p>
      {{ 'This link will expire in'|trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
    </p>
    <p>
      {{ 'If you don\'t receive an email please check your spam folder'|trans }}
      {{ 'or'|trans }} <a href="{{ path('app_forgot_password_request') }}">{{ 'try again'|trans }}</a>.
     </p>
  </div>

{% endblock %}
